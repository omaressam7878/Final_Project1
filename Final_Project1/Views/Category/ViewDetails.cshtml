@model Category

@{
    ViewData["Title"] = "Category Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #f4f4f4;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">Category Details</h2>
        <div class="card">
            <div class="card-header text-white" style="background-color: #009b77;">
                <h4>@Model.Name</h4>
            </div>
            <div class="card-body">
                <p><strong>ID:</strong> @Model.CategoryId</p>
                <p><strong>Description:</strong></p>
                <p>@Model.Description</p>
                <a asp-action="Edit" asp-route-id="@Model.CategoryId" class="btn btn-warning">Edit</a>
                <a asp-action="Index" class="btn btn-secondary">Back to Categories</a>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
