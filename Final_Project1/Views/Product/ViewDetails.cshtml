@model Product

@{
    ViewData["Title"] = "Product Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #f4f4f4;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">Product Details</h2>
        <div class="card">
            <div class="card-header text-white" style="background-color: #009b77;">
                <h4>@Model.Title</h4>
            </div>
            <div class="card-body">
                <p><strong>ID:</strong> @Model.ProductId</p>
                <p><strong>Price:</strong> @Model.Price.ToString("C")</p>
                <p><strong>Description:</strong></p>
                <p>@Model.Description</p>
                <p><strong>Quantity:</strong> @Model.Quantity</p>
                <p><strong>Image Path:</strong> @Model.ImagePath</p>
                <p><strong>Category:</strong> @Model.Category.Name</p>
                <div class="text-center">
                    <img src="@Model.ImagePath" alt="@Model.Title" class="img-fluid" />
                </div>
                <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-warning mt-3">Edit</a>
                <a asp-action="Index" class="btn btn-secondary mt-3">Back to Products</a>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
